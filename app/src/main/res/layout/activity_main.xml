<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tv1"
    tools:context=".MainActivity">


    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@null"
        android:scaleType="fitStart"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_marginTop="90dp"
            android:layout_width="200dp"
            android:layout_height="130dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/cardcor"
            android:layout_marginStart="40dp">

            <ImageButton
                android:id="@+id/bt_tv"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="fitStart"
                android:src="@drawable/tv" />

            <TextView
                android:layout_marginTop="55dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/lb_tv_white"
                android:text="TV" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_marginTop="90dp"
            android:layout_width="130dp"
            app:cardBackgroundColor="@color/cardcor"
            android:layout_height="130dp"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="40dp">


            <ImageButton
                android:id="@+id/bt_vod"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="fitStart"
                android:src="@drawable/vod" />

            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/lb_tv_white"
                android:text="VOD" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_marginTop="90dp"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:layout_marginStart="100dp"
            android:src="@drawable/banner1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linear1"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_marginTop="50dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/cardcor"
            android:background="#6E1010"
            android:layout_marginStart="40dp">

            <ImageButton
                android:id="@+id/bt_tv2"
                android:layout_marginTop="10dp"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="fitStart"
                android:src="@drawable/tv2" />

            <TextView
                android:layout_marginTop="48dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/lb_tv_white"
                android:text="TV2" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            android:layout_marginTop="50dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            app:cardCornerRadius="8dp"
            android:background="#6E1010"
            app:cardBackgroundColor="@color/cardcor"

            android:layout_marginStart="40dp">

            <ImageButton
                android:id="@+id/bt_vod2"
                android:layout_marginTop="10dp"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="fitStart"
                android:src="@drawable/vod2" />

            <TextView
                android:layout_marginTop="48dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/lb_tv_white"
                android:text="VOD2" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card5"
            android:layout_marginTop="50dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/cardcor"
            android:background="#6E1010"
            android:layout_marginStart="40dp">

            <ImageButton
                android:id="@+id/bt_youtube"
                android:layout_marginTop="10dp"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="fitStart"
                android:src="@drawable/youtube" />

            <TextView
                android:layout_marginTop="48dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/lb_tv_white"
                android:text="YOUTUBE" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card6"
            app:cardBackgroundColor="@color/cardcor"
            android:layout_marginTop="50dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            app:cardCornerRadius="8dp"
            android:background="#6E1010"
            android:layout_marginStart="40dp">

            <ImageButton
                android:id="@+id/bt_suporte"
                android:layout_marginTop="10dp"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="fitStart"
                android:src="@drawable/suporte" />

            <TextView
                android:layout_marginTop="48dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/lb_tv_white"
                android:text="SUPORTE" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card7"
            android:layout_marginTop="50dp"
            android:layout_width="150dp"
            app:cardBackgroundColor="@color/cardcor"
            android:layout_height="100dp"
            app:cardCornerRadius="8dp"
            android:background="#6E1010"
            android:layout_marginStart="40dp">
            <ImageButton
                android:id="@+id/bt_aplicativo"
                android:layout_marginTop="10dp"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="fitStart"
                android:src="@drawable/aplicativos" />

            <TextView
                android:layout_marginTop="48dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/lb_tv_white"
                android:text="APLICATIVOS" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>



</RelativeLayout>